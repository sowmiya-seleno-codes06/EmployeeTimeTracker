@model List<EmployeeTimeApp.Models.EmployeeTotal>

@{
    ViewData["Title"] = "Employee Hours";
}

<h1>Employee Total Hours Worked</h1>

<table border="1" cellpadding="5" cellspacing="0" style="border-collapse: collapse;">
    <thead>
        <tr style="background-color: #ccc;">
            <th>Name</th>
            <th>Total Hours</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var emp in Model)
    {
        var rowStyle = emp.TotalHours < 100 ? "background-color: #ffcccc;" : "";
        <tr style="@rowStyle">
            <td>@emp.EmployeeName</td>
            <td>@emp.TotalHours.ToString("F2")</td>
        </tr>
    }
    </tbody>
</table>

